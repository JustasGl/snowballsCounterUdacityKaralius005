<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.android.snowballscounterudacitykaralius005.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout style="@style/layoutstyles">
            <TextView
                style="@style/UpperText"
                android:text="@string/first_player" />
            <TextView style="@style/hasbeen" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView style="@style/snowballimg" />
                <TextView
                    android:id="@+id/scorea"
                    style="@style/scoretext" />
            </RelativeLayout>
            <Button
                android:id="@+id/buttonfirst"
                style="@style/throwbutton" />
            <Button
                android:id="@+id/buttonfirstminus"
                style="@style/minusbutton" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/seperator"
            android:layout_height="match_parent"
            android:background="@color/black" />
        <LinearLayout style="@style/layoutstyles">
            <TextView
                style="@style/UpperText"
                android:text="@string/second_player" />
            <TextView style="@style/hasbeen" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView style="@style/snowballimg" />
                <TextView
                    android:id="@+id/scoreb"
                    style="@style/scoretext" />
            </RelativeLayout>
            <Button
                android:id="@+id/buttonsecond"
                style="@style/throwbutton" />
            <Button
                android:id="@+id/buttonsecondminus"
                style="@style/minusbutton" />
        </LinearLayout>
    </LinearLayout>
    <Button
        style="@style/minusbutton"
        android:text="Reset"
        android:id="@+id/resetbtn"/>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:background="@drawable/a_hits"
        android:visibility="gone" />
</LinearLayout>
</ScrollView>